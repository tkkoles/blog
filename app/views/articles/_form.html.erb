
<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "błędy") %> z powodu których nie można zapisać:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :tytuł %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :tekst %><br>
    <%= f.text_area :text, :cols => 100, :rows => 10 %>
  </p>
 
 <p>
  <%= f.submit 'Zapisz' %>
</p>
<% end %>